<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity01">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f0f8ff"
        android:id="@+id/abababa">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="えぐられるように痛む"
            android:id="@+id/myButton01"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:onClick="changeLabel"
            android:layout_alignParentStart="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:textSize="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="締め付けるように痛む"
            android:id="@+id/myButton02"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:onClick="changeLabel"
            android:layout_alignParentEnd="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ズキズキ痛む"
            android:id="@+id/myButton03"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:onClick="changeLabel"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:focusable="false"
            android:longClickable="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />
    </LinearLayout>




    <TextView
        android:text="どのような症状ですか？"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/myLabel"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:textSize="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/editText"
        android:textIsSelectable="false"
        android:textColor="#000000"
        android:textSize="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />


</RelativeLayout>
